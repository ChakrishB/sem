#include<iostream>
using namespace std;
int main()
{
    int n, rem, sum = 0;
    cout<<"Enter the number: ";
    cin>>n;
    while(n != 0)
    {
        rem = n % 10;
        sum = sum + rem;
        n = n / 10;
    }
    cout<<"\nSum of Digits of a number = "<<sum;
    cout<<endl;
    return 0;
}
