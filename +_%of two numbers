#include <iostream>
using namespace std;

int main() {
  int num1, num2;
  
  cout << "Enter two integers: ";
  cin >> num1 >> num2;

  int sum = num1 + num2;
  cout << num1 << " + " << num2 << " = " << sum << endl;

  int diff = num1 - num2;
  cout << num1 << " - " << num2 << " = " << diff << endl;

  int product = num1 * num2;
  cout << num1 << " * " << num2 << " = " << product << endl;

  double quotient = static_cast<double>(num1) / num2;
  cout << num1 << " / " << num2 << " = " << quotient << endl;

  int remainder = num1 % num2;
  cout << num1 << " % " << num2 << " = " << remainder << endl;
  
  return 0;
}
